<Window x:Class="ScreenDrawing.DrawMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DrawMenu" Height="50" Width="200"
        Topmost="True"
        WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" PreviewMouseDown="Move_Down">Move</Button>
        <Button Grid.Column="1" Click="Clear_Click">clear</Button>
        <Button Grid.Column="2" Click="Mode_Click">change</Button>
        <Button Grid.Column="3" Click="Exit_Click">Exit</Button>
    </Grid>
</Window>
